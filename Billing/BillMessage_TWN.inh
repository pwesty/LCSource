#define BILL_SECTION_HOUR		6
#define BILL_SECTION_DAY		4
#define BILL_SECTION_BEGIN		2
#define BILL_SECTION_FREE		50

#ifdef __BILLING_SERVER__
#define MSG_UNKNOWN 0
